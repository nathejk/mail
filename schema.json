{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "subject": {"type": "string"},
        "body": {"type": "string"},
        "recipients": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "mail": {"type": "string"}
                },
                "additionalProperties": false,
                "required": ["name", "mail"]
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "subject",
        "body",
        "recipients"
    ]
}
